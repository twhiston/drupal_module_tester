{
  "name": "drupal/docker-module-tester",
  "description": "Composer template for docker module tester for drupal 8",
  "type":"px-installer",
  "repositories": [
    {"type": "composer", "url": "https://packages.drupal.org/8"}
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "roave/security-advisories": "dev-master",
    "composer/installers": "~1.0",
    "cweagans/composer-patches": "~1.0",
    "wikimedia/composer-merge-plugin": "~1.3",
    "drupal/core": "~8",
    "drupal/console": "^1"
  },
  "require-dev": {
    "drupal/drupal-extension": "~3.0",
    "nuvoleweb/drupal-behat": "^1.0",
    "drupal/coder": "^8.2",
    "squizlabs/php_codesniffer": "*"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
    }
  },
  "scripts": {


  },
  "config": {
    "vendor-dir": "vendor"
  },
  "extra": {
    "enable-patching": true,
    "patches":{

    },
    "installer-paths": {
      "vendor/px": ["type:px-buildsystem"],
      "docroot/core": ["type:drupal-core"],
      "docroot/profiles/{$name}/": ["type:drupal-profile"],
      "docroot/modules/contrib/{$name}/": ["type:drupal-module"],
      "docroot/themes/contrib/{$name}/": ["type:drupal-theme"],
      "build/webpack": ["type:drupal-webpack"],
      "docroot/sites/all/drush/{$name}/": ["type:drupal-drush"]
    },
    "merge-plugin": {
      "include": [
        "docroot/modules/*/composer.json",
        "docroot/core/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "merge-dev": true,
      "merge-extra": true
    }
  }
}
